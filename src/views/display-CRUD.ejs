<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    .btn-edit {
        background: orange;
        outline: none;
        border: none;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }

    .btn-delete {
        background: #ff023f;
        outline: none;
        border: none;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }
</style>

<body>
    Get crud form view
    <table style="width:100%">
        <tr>
            <td>Email</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>Phone Number</td>
            <td>Action</td>
        </tr>
        <% for(var i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <%= dataTable[i].phoneNumber %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                     <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete"
                        type="button">Delete</a>
                </td>
            </tr>
            <% } %>
            <p id="demo"></p>
    </table>
    <script>
    function myFunction(id) {
        let text = "Press a button!\nEither OK or Cancel.";
        if (confirm(text) == true) {
            window.location.href = "/delete-crud?id="+id;
        } else {
          text = "You canceled!";
        }
       // document.getElementById("demo").innerHTML = text;
      }
      </script>
</body>

</html>